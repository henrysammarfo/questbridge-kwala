{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "test/**/*.ts", "tests/**/*.ts", "**/*.test.ts", "**/*.test.tsx"],
      "outputs": ["coverage/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "compile": {
      "dependsOn": ["^build"],
      "outputs": ["artifacts/**", "cache/**", "typechain-types/**"]
    },
    "deploy": {
      "dependsOn": ["compile"],
      "cache": false
    }
  },
  "globalDependencies": [
    "package.json",
    "tsconfig.json",
    ".eslintrc.json",
    "turbo.json"
  ]
}